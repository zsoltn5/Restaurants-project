<!DOCTYPE html>
<html lang="hu">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" type="text/css" media="screen" href="index.css" />
        <title>Vendeglok</title>
        <script src='script_ajax.js' type="text/javascript"></script>
    </head>
    
    <body>

        <h2>Restaurants</h2>
        <nav id="gyors_eleres">
            <a href="#"><button>Main page</button> </a>
            <a href="/uj_foglalas"><button>New reservation</button> </a>
        </nav>

        <!-- A Vendeglok -->
        <% if(vendeglok.length) {%>

            <div class="list-container">
                <% vendeglok.forEach((vend) => { %>
                    <div class="list-item" id = "list" onclick="getMoreInfoVendeglo(`<%= vend.VID %>`)">
                        <br>
                        <div class="list-item-name" onclick="getMoreInfoVendeglo(`<%= vend.VID %>`)"> <%= vend.VNev %> </div>
                        <!-- <div class="list-item-town"> <%= vend.Varos %></div> -->
                        <!-- <div class="list-item-street"> <%= vend.Utca %></div> -->
                        <!-- <div class="list-item-number"> <%= vend.Szam %></div> -->
                        <!-- <div class="list-item-tel"> <%= vend.Telefon %></div> -->
                        <div class="list-item-hours"> <%= vend.Nyitas %> - <%= vend.Zaras %></div>
                        <div class="getMoreInfoVendeglo" id="getMoreInfoVendeglo/<%= vend.VID %>"></div>
                        <nav id="reszletek"> <a href=/vendeglo/<%= vend.VID %>> <button class="button"> More info</button></a><br>
                        </nav>
                    </div>
                <% }) %>
            </div>

        <% } else { %>
            <div>No Restaurants</div>
        <% } %>

        <form action="/vendegloBeszuras" method="POST">
            <p>Add a restaurant</p>

            <label>Name</label><br>
            <input type="text" name="form_name" id="form_name" pattern="[A-Z][a-z]*" placeholder="Kolozsvar" required><br><br>
            
            <label>City</label><br>
            <input type="text" name="form_varos" id="form_varos" pattern="[A-Z][a-z]*" placeholder="Kolozsvar" required><br><br>

            <label>Street</label><br>
            <input type="text" name="form_utca" id="form_utca" pattern="[A-Z][a-z]*" placeholder="Farkas" required><br><br>

            <label>Number</label><br>
            <input type="number" name="form_szam" id="form_szam" placeholder="1" required><br><br>

            <label>Phone number</label><br>
            <input type="tel" name="form_telefon" id="form_telefon" pattern="[0-9]{10}" placeholder="0xxxxxxxxx" required><br><br>

            <label>Open hours</label><br>

            <input type="number" name="form_nyitas" id="form_nyitas" placeholder="9" required>            
            <label> - </label>
            <input type="number" name="form_zaras" id="form_zaras" placeholder="22" required><br><br>

            <input type="submit" name="form_submit1" id="form_submit1" value="SUBMIT"><br><br><br>
        </form>

        <footer><div id="f_footer"></div></footer>
    </body>